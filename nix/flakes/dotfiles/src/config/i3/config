set $cyan #2aa198
set $green #859900

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border   BG       Text      Indicator  Child Border
client.focused          $blue    $base2   $blue     $violet    $blue
client.focused_inactive $base02  $base2   $base00   $violet    $base02
client.unfocused        $base02  $base02  $base1    $violet    $base02
client.urgent           $yellow  $yellow  $base02   $yellow    $yellow
client.placeholder      $base3   $base2   $base3    $base1     $base2
client.background       $base02

# Polybar
# Polybar launch script (located ~/.config/polybar/launch.sh) 
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Diodon clipboard manager
# Diodon launch script (located ~/.config/polybar/diodon.sh) 
exec_always --no-startup-id $HOME/.config/polybar/diodon.sh
bindsym Mod1+Shift+v exec --no-startup-id /usr/bin/diodon

# Rofi
bindsym $mod+Shift+p exec --no-startup-id ~/.config/polybar/scripts/powermenu.sh

# Wallpaper (not needed on gnome)
# exec --no-startup-id nitrogen --set-zoom-fill $HOME/.local/share/backgrounds/family.jpg

