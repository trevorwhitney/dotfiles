  autocmd! BufReadPost,BufWritePost * Neomake

  " Disable syntastic for filetypes that neomake
  " had makers for, but leave acitve for checkers
  " that are only in syntastic.
  let g:syntastic_mode_map = {
    \ "mode": "passive",
    \ "active_filetypes": ['purescript', 'elm'],
    \ "passive_filetypes": [] }

  let g:neomake_serialize = 1
  let g:neomake_serialize_abort_on_error = 1
endif
