PYENV_ROOT=$HOME/.pyenv
PATH=$GOPATH/bin:$RBENV_ROOT/bin:$PYENV_ROOT/bin:$HOME/bin:$HOME/.local/bin:$PYTHON_HOME/bin:$PATH

# Load Rbenv
[ `which rbenv` ] && eval "$(rbenv init -)"

# Load direnv
[ `which direnv` ] && eval "$(direnv hook bash)"

# Load pyenv
export PYENV_VIRTUALENV_DISABLE_PROMPT=1
[ `which pyenv` ] && eval "$(pyenv init -)"
[ `which pyenv-virtualenv-init` ] && eval "$(pyenv virtualenv-init -)"

tmux2host() {
  if [ $# -eq 2  ]; then
    user=$1
    host=$2
    ssh $1@$host -t "bash -l -c \"tmux new\""
  elif [ $# -eq 1 ]; then
    host=$1
    ssh $host -t "bash -l -c \"tmux new\""
  else
    echo 'Incorrect usage'
    echo "usage: tmux2host [user] host-ip"
    return 1
  fi
}

# The next line updates PATH for the Google Cloud SDK.
